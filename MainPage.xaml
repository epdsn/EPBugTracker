<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EPBugTracker.MainPage">

    <VerticalStackLayout Padding="12" Spacing="12">
        <!-- Top bar: title on the far left, actions on the right -->
        <Grid HorizontalOptions="Fill" ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <HorizontalStackLayout Grid.Column="1" Spacing="8" HorizontalOptions="End">
                <Button Text="Import" x:Name="ImportBtn" Clicked="OnImportClicked" />
                <Button Text="Add Bug" Clicked="OnAddBugClicked" />
                <Button Text="Diagnostics" Clicked="OnDiagnosticsClicked" />
                <Button Text="Reload" Clicked="OnReloadClicked" />
            </HorizontalStackLayout>
        </Grid>

        <Grid ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- New -->
            <Border Grid.Column="0" Stroke="#888" Padding="8">
                <VerticalStackLayout>
                    <Label Text="New" FontAttributes="Bold" />
                    <CollectionView x:Name="NewCollection" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Stroke="#ccc" StrokeThickness="1" Padding="8" Margin="4">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Title}" FontAttributes="Bold" />
                                        <Label Text="{Binding Project}" FontSize="12" TextColor="#444" />
                                        <Label Text="{Binding Description}" LineBreakMode="TailTruncation" />
                                        <Label Text="Assignee: {Binding AssigneeEmail}" FontSize="12" TextColor="#666" />
                                        <HorizontalStackLayout Spacing="6">
                                            <Button Text="Edit" Clicked="OnEditClicked" />
                                            <Button Text="Assign" Clicked="OnAssignClicked" />
                                            <Button Text="Move" Clicked="OnMoveClicked" />
                                            <Button Text="Email" Clicked="OnEmailClicked" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

            <!-- In Progress -->
            <Border Grid.Column="1" Stroke="#888" Padding="8">
                <VerticalStackLayout>
                    <Label Text="In Progress" FontAttributes="Bold" />
                    <CollectionView x:Name="InProgressCollection" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Stroke="#ccc" StrokeThickness="1" Padding="8" Margin="4">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Title}" FontAttributes="Bold" />
                                        <Label Text="{Binding Project}" FontSize="12" TextColor="#444" />
                                        <Label Text="{Binding Description}" LineBreakMode="TailTruncation" />
                                        <Label Text="Assignee: {Binding AssigneeEmail}" FontSize="12" TextColor="#666" />
                                        <HorizontalStackLayout Spacing="6">
                                            <Button Text="Edit" Clicked="OnEditClicked" />
                                            <Button Text="Assign" Clicked="OnAssignClicked" />
                                            <Button Text="Move" Clicked="OnMoveClicked" />
                                            <Button Text="Email" Clicked="OnEmailClicked" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

            <!-- Resolved -->
            <Border Grid.Column="2" Stroke="#888" Padding="8">
                <VerticalStackLayout>
                    <Label Text="Resolved" FontAttributes="Bold" />
                    <CollectionView x:Name="ResolvedCollection" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Stroke="#ccc" StrokeThickness="1" Padding="8" Margin="4">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Title}" FontAttributes="Bold" />
                                        <Label Text="{Binding Project}" FontSize="12" TextColor="#444" />
                                        <Label Text="{Binding Description}" LineBreakMode="TailTruncation" />
                                        <Label Text="Assignee: {Binding AssigneeEmail}" FontSize="12" TextColor="#666" />
                                        <HorizontalStackLayout Spacing="6">
                                            <Button Text="Edit" Clicked="OnEditClicked" />
                                            <Button Text="Assign" Clicked="OnAssignClicked" />
                                            <Button Text="Move" Clicked="OnMoveClicked" />
                                            <Button Text="Email" Clicked="OnEmailClicked" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

        </Grid>

    </VerticalStackLayout>

</ContentPage>
