<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EPBugTracker.MainPage">

    <VerticalStackLayout Padding="12" Spacing="12">
        <HorizontalStackLayout HorizontalOptions="Fill" Spacing="8">
            <Label Text="EP Bug Tracker" FontSize="24" VerticalOptions="Center" />
            <Button Text="Import" x:Name="ImportBtn" Clicked="OnImportClicked" HorizontalOptions="End" />
            <Button Text="Add Bug" Clicked="OnAddBugClicked" />
        </HorizontalStackLayout>

        <Grid ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- New -->
            <Frame Grid.Column="0" BorderColor="#888" Padding="8">
                <VerticalStackLayout>
                    <Label Text="New" FontAttributes="Bold" />
                    <CollectionView x:Name="NewCollection" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BorderColor="#ccc" Padding="8" Margin="4">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Title}" FontAttributes="Bold" />
                                        <Label Text="{Binding Description}" LineBreakMode="TailTruncation" />
                                        <Label Text="Assignee: {Binding AssigneeEmail}" FontSize="12" TextColor="#666" />
                                        <HorizontalStackLayout Spacing="6">
                                            <Button Text="Assign" Clicked="OnAssignClicked" />
                                            <Button Text="Move" Clicked="OnMoveClicked" />
                                            <Button Text="Email" Clicked="OnEmailClicked" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- In Progress -->
            <Frame Grid.Column="1" BorderColor="#888" Padding="8">
                <VerticalStackLayout>
                    <Label Text="In Progress" FontAttributes="Bold" />
                    <CollectionView x:Name="InProgressCollection" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BorderColor="#ccc" Padding="8" Margin="4">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Title}" FontAttributes="Bold" />
                                        <Label Text="{Binding Description}" LineBreakMode="TailTruncation" />
                                        <Label Text="Assignee: {Binding AssigneeEmail}" FontSize="12" TextColor="#666" />
                                        <HorizontalStackLayout Spacing="6">
                                            <Button Text="Assign" Clicked="OnAssignClicked" />
                                            <Button Text="Move" Clicked="OnMoveClicked" />
                                            <Button Text="Email" Clicked="OnEmailClicked" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Resolved -->
            <Frame Grid.Column="2" BorderColor="#888" Padding="8">
                <VerticalStackLayout>
                    <Label Text="Resolved" FontAttributes="Bold" />
                    <CollectionView x:Name="ResolvedCollection" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BorderColor="#ccc" Padding="8" Margin="4">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Title}" FontAttributes="Bold" />
                                        <Label Text="{Binding Description}" LineBreakMode="TailTruncation" />
                                        <Label Text="Assignee: {Binding AssigneeEmail}" FontSize="12" TextColor="#666" />
                                        <HorizontalStackLayout Spacing="6">
                                            <Button Text="Assign" Clicked="OnAssignClicked" />
                                            <Button Text="Move" Clicked="OnMoveClicked" />
                                            <Button Text="Email" Clicked="OnEmailClicked" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

        </Grid>

    </VerticalStackLayout>

</ContentPage>
