<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EPBugTracker.UsersPage"
             Title="Users">

    <VerticalStackLayout Padding="12" Spacing="12">
        <!-- Centered, fixed-width container for the form -->
        <Frame HorizontalOptions="Center"
               VerticalOptions="Start"
               WidthRequest="600"
               Padding="12"
               CornerRadius="8"
               HasShadow="True">

            <Grid ColumnSpacing="8" RowSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Entry x:Name="NameEntry" Placeholder="Name" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" />
                <Entry x:Name="EmailEntry" Placeholder="Email" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" />
                <Button Text="Add/Update" Clicked="OnAddUpdateClicked" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="Start" Margin="0,4,0,0" />
            </Grid>
        </Frame>

        <CollectionView x:Name="UsersCollection" SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="#ccc" StrokeThickness="1" Padding="8" Margin="4">
                        <HorizontalStackLayout>
                            <Grid ColumnDefinitions="*,Auto" VerticalOptions="Fill">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Label Text="{Binding Name}" FontAttributes="Bold" Grid.Row="0" />
                                    <Label Text="{Binding Email}" FontSize="12" TextColor="#666" Grid.Row="1" />
                                </Grid>
                                <Button Text="Remove" Clicked="OnRemoveClicked" Grid.Column="1" VerticalOptions="Center" />
                            </Grid>
                        </HorizontalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>

</ContentPage>