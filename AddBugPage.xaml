<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EPBugTracker.AddBugPage"
             Title="Add Bug">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label Text="Title" />
            <Entry x:Name="TitleEntry" Placeholder="Title" />

            <Label Text="Description" />
            <Editor x:Name="DescriptionEditor" AutoSize="TextChanges" HeightRequest="120" />

            <!-- Repeatable steps: freeform editor and a simple step list -->
            <Label Text="Repeatable Steps (freeform)" />
            <Editor x:Name="RepeatableStepsEditor" AutoSize="TextChanges" HeightRequest="100" />

            <Label Text="Repeatable Steps (list)" />
            <HorizontalStackLayout Spacing="8">
                <Entry x:Name="StepEntry" Placeholder="Add a step" HorizontalOptions="FillAndExpand" />
                <Button Text="Add Step" Clicked="OnAddStepClicked" />
            </HorizontalStackLayout>

            <CollectionView x:Name="StepsCollection" ItemsLayout="VerticalList" HeightRequest="120">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout Padding="4" Spacing="8" VerticalOptions="Center">
                            <Label Text="{Binding .}" HorizontalOptions="StartAndExpand" />
                            <Button Text="Remove" Clicked="OnRemoveStepClicked" CommandParameter="{Binding .}" />
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="Project" />
            <Entry x:Name="ProjectEntry" Placeholder="Project / Category" />

            <Label Text="Assignee Email" />
            <Entry x:Name="AssigneeEntry" Placeholder="Assignee email" Keyboard="Email" />

            <Label Text="Attachments" />
            <ScrollView Orientation="Horizontal" HeightRequest="110">
                <HorizontalStackLayout x:Name="ImagesPanel" Spacing="8" Padding="4" />
            </ScrollView>
            <Button Text="Add Attachment" Clicked="OnAddImageClicked" />

            <Label Text="Priority" />
            <Picker x:Name="PriorityPicker">
                <Picker.Items>
                    <x:String>Low</x:String>
                    <x:String>Medium</x:String>
                    <x:String>High</x:String>
                </Picker.Items>
            </Picker>

            <Label Text="Status" />
            <Picker x:Name="StatusPicker">
                <Picker.Items>
                    <x:String>New</x:String>
                    <x:String>InProgress</x:String>
                    <x:String>Resolved</x:String>
                </Picker.Items>
            </Picker>

            <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
                <Button Text="Cancel" Clicked="OnCancelClicked" />
                <Button Text="Save" Clicked="OnSaveClicked" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>