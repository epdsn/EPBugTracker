<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EPBugTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EPBugTracker"
    Title="EPBugTracker">

    <!-- Global title view shown in the top navigation area on every page -->
    <Shell.TitleView>
        <Grid Padding="8">
            <Label Text="EP Bug Tracker" FontSize="20" VerticalOptions="Center" HorizontalOptions="Start" />
        </Grid>
    </Shell.TitleView>

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Users"
            ContentTemplate="{DataTemplate local:UsersPage}"
            Route="UsersPage" />
    </TabBar>

</Shell>
