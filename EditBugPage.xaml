<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EPBugTracker.EditBugPage"
             Title="Edit Bug">

    <ScrollView>
      <Border Style="{StaticResource MainPanelBorder}" 
              Margin="200, 40"
              Grid.Column="1">
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label Text="ID" />
            <Label x:Name="IdLabel" FontSize="12" TextColor="#666" />

            <Label Text="Title" />
            <Entry x:Name="TitleEntry" Placeholder="Title" />

            <Label Text="Description" />
            <Editor x:Name="DescriptionEditor" AutoSize="TextChanges" HeightRequest="120" />

            <Label Text="Repeatable Steps" />
            <Editor x:Name="RepeatableStepsEditor" AutoSize="TextChanges" HeightRequest="120" />

            <Label Text="Project" />
            <Entry x:Name="ProjectEntry" Placeholder="Project / Category" />

            <Label Text="Assignee Email" />
            <Entry x:Name="AssigneeEntry" Placeholder="Assignee email" Keyboard="Email" />

            <Label Text="Attachments" />
            <ScrollView Orientation="Horizontal" HeightRequest="110">
                <HorizontalStackLayout x:Name="ImagesPanel" Spacing="8" Padding="4" />
            </ScrollView>
            <Button Text="Add Attachment" Clicked="OnAddImageClicked" />

            <Label Text="Priority" />
            <Picker x:Name="PriorityPicker">
                <Picker.Items>
                    <x:String>Low</x:String>
                    <x:String>Medium</x:String>
                    <x:String>High</x:String>
                </Picker.Items>
            </Picker>

            <Label Text="Status" />
            <Picker x:Name="StatusPicker">
                <Picker.Items>
                    <x:String>New</x:String>
                    <x:String>InProgress</x:String>
                    <x:String>Resolved</x:String>
                </Picker.Items>
            </Picker>

            <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
                <Button Text="Cancel" Clicked="OnCancelClicked" />
                <Button Text="Save" Clicked="OnSaveClicked" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
      </Border>
    </ScrollView>
</ContentPage>